<%= stylesheet_link_tag 'pages/page_log_reg_v2.css' %>
<!--=== Content Part ===-->    
<div class="container">
    <!--Reg Block-->
    <div class="reg-block">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal form-user"}) do |f| %>
        <div class="reg-block-header">
            <h2><%= t(:signin) %></h2>
            <ul class="social-icons text-center">
                <li><a data-original-title="Facebook" href="#"><i class="fa fa-facebook"></i></a></li>
                <li><a data-original-title="Twitter" href="#"><i class="fa fa-twitter"></i></a></li>
                <li><a data-original-title="Google Plus" href="#"><i class="fa fa-google-plus"></i></a></li>
                <li><a data-original-title="Linkedin" href="#"><i class="fa fa-linkedin"></i></a></li>
            </ul>
            <p><%= t(:no_account) %> <a class="color-green" href="page_registration1.html"><%= t(:signup) %></a></p>            
        </div>

        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
            <%= f.text_field :login, class: "form-control", html: {spellcheck: "false"}, autofocus: true, placeholder: t(:user_or_email)%>

            <!-- <input type="text" class="form-control" placeholder="Email"> -->
        </div>
        <div class="input-group margin-bottom-20">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <%= f.password_field :password, class: "form-control", html: {autocomplete: "off"}, placeholder: t(:password)%>
            <!-- <input type="text" class="form-control" placeholder="Password"> -->
        </div>
        <hr>

        <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
            <label>
                <%= f.check_box :remember_me %>
                <p><%= f.label :remember_me, t(:remember)%></p>
            </label>            
        </div>
        <% end %>
                       
        <%= render "devise/shared/links" %>         
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
              <%= f.submit t(:login), class: "btn-u btn-block" %>
            </div>
        </div>
    </div>
    <% end %>
    <!--End Reg Block-->
</div><!--/container-->
<!--=== End Content Part ===-->

<%= javascript_include_tag 'plugins/countdown/jquery.countdown.js' %>
<%= javascript_include_tag 'plugins/backstretch/jquery.backstretch.min.js' %>

<script type="text/javascript">
    $.backstretch([
      "<%= image_path 'bg/5.jpg'%>",
      "<%= image_path 'bg/4.jpg'%>",
      ], {
        fade: 1000,
        duration: 7000
    });
</script>
<script type="text/javascript">
    jQuery(document).ready(function() {
        App.init();      
    });
</script>