<%= simple_form_for(@order) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :processed %>
    <%= f.input :shipped %>
    <%= f.input :tracking %>
    <%= f.association :user %>
    <%= f.input :to_address %>
    <%= f.input :billing_address %>
    <%= f.input :tax_shipping_cost %>
    <%= f.input :shopping_cart %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
